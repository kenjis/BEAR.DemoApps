<script src="/assets/js/modal.js"></script>


<table class="table table-bordered table-striped">
    <tr>
        <th class="span1">Id</th>
        <th>Title</th>
        <th>Body</th>
        <th>CreatedAt</th>
        <th></th>
    </tr>
{% for post in resource.body %}
    <tr>
        <td>{{ post.id }}</td>
        <td><a href="{href rel="page_item" data=$post}">{{ post.title }}</a></td>
        <td>{{ post.body }}</td>
        <td>{{ post.created }}</td>
        <td><a title="Edit post" class="btn" href="{href rel="page_edit" data=$post}">
                <span class="icon-edit"></span>
            </a>
            <a title="Delete post" class="btn" href="#" onclick="return MyDialogs.confirm('{href rel="page_delete" data=$post}', 'Are you sure ? The entry will be deleted permanently.');">
                <span class="icon-trash"></span>
            </a>
        </td>
    </tr>
{% endfor %}
</table>
